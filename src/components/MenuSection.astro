---
interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;
---

<section class="menu-section">
  <header class="menu-header">
    <h1>{title}</h1>
    <p class="menu-description">{description}</p>
  </header>
  <div class="menu-content">
    <slot />
  </div>
</section>

<style>
  .menu-section {
    padding: 3rem 1rem;
    min-height: calc(100vh - 200px);
    max-width: 1200px;
    margin: 0 auto;
  }

  .menu-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  h1 {
    margin-bottom: 1rem;
    font-size: 2.5rem;
  }

  .menu-description {
    font-size: 1.2rem;
    color: var(--text-primary);
    opacity: 0.8;
  }

  .menu-content {
    max-width: 900px;
    margin: 0 auto;
  }

  @media (max-width: 768px) {
    h1 {
      font-size: 2rem;
    }

    .menu-description {
      font-size: 1rem;
    }
  }
</style>
